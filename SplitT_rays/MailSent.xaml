<Window x:Class="Split_Trays.MailSent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Split_Trays"
        mc:Ignorable="d"
        Title="MailSent" Height="270" Width="400" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFA2C3EA" Offset="0"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <StackPanel>
            <Label Content="Notification sent successfully" Margin="0,20,0,0" HorizontalAlignment="Center" FontSize="25" FontWeight="Bold"/>
            <Image Source="/Resources/mail.png" Width="100"/>
            <Button Content="OK" Width="150" Margin="0,20,0,0" FontSize="20" IsCancel="True" Height="40"/>
        </StackPanel>
    </Grid>
</Window>
